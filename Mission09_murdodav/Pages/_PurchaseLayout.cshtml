<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="/lib/font-awesome/css/all.min.css" rel="stylesheet" />
</head>
<body>
    <header>
        <div class="bg-primary text-white p-2 fixed-top">
            <div class="container-fluid">
                <div class="row">
                    <div class="col navbar-brand">
                        <a asp-controller="Home" asp-action="Index" class="text-white" style="text-decoration: none">
                            <i class="fa fa-book-open"></i> Alphabet | Book Store
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="m-5 p-1"></div>

    <div class="m-1 p-1 min-vh-100">
        @RenderBody()
    </div>

    <footer class="border-top footer text-muted">
        <div class="container float-left">
            &copy; 2023 - Mission10_murdodav - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
</body>
</html>

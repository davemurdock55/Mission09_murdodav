@{
}

@model IEnumerable<string>


<div style="display: grid; grid-gap: 1rem;">
    @*To see ALL of the books, regardless of cateogry (the default case)*@
    <a asp-controller="Home" asp-action="Index" asp-route-bookCategory="" asp-route-pageNum="1" class="btn btn-outline-secondary">Home</a>

    @*To show buttons to filter down to certain book categories*@
    @foreach (string c in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-bookCategory="@c" asp-route-pageNum="1"
           class="btn @(ViewBag.SelectedType == c ? "btn-primary" : "btn-outline-secondary")">@c</a>
    }
</div>
